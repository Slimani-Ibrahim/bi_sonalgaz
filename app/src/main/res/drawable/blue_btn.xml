<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#0b1cb9" />
            <gradient android:angle="-90" android:startColor="#2c40da" android:endColor="#2c43da"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2b34d4" />
            <solid android:color="#2926dc"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <stroke android:width="2dp"
                android:color="#2c2fda"/>
            <corners
                android:radius="30dp" />
        </shape>
    </item>


</selector>